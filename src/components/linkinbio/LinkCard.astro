---
interface Props {
  title: string;
  url: string;
  emoji?: string;
  highlight?: boolean;
  external?: boolean;
}

const { title, url, emoji = '', highlight = false, external = false } = Astro.props;
---

<a
  href={url}
  target={external ? '_blank' : '_self'}
  rel={external ? 'noopener' : undefined}
  class:list={[
    'block w-full p-4 rounded-xl text-center font-medium transition-all duration-200 hover:scale-[1.02] active:scale-[0.98]',
    highlight
      ? 'bg-primary-500 text-white shadow-md hover:bg-primary-600 hover:shadow-lg'
      : 'bg-white text-gray-800 border border-gray-200 hover:border-primary-300 hover:shadow-md',
  ]}
>
  {emoji && <span class="mr-2">{emoji}</span>}
  {title}
  {external && (
    <svg class="w-4 h-4 inline-block ml-1 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
    </svg>
  )}
</a>
