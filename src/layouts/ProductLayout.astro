---
import BaseLayout from './BaseLayout.astro';
import Breadcrumbs from '../components/common/Breadcrumbs.astro';
import AmazonButton from '../components/product/AmazonButton.astro';
import RatingStars from '../components/product/RatingStars.astro';
import ProsCons from '../components/product/ProsCons.astro';
import { formatPrice } from '../utils/formatting';
import { productSchema } from '../utils/seo';
import { buildAmazonLink, buildAmazonSearchLink } from '../utils/affiliate';
import siteConfig from '../data/site-config.json';

interface Props {
  name: string;
  slug: string;
  shortDescription: string;
  fullDescription: string;
  category: string;
  amazonAsin: string;
  affiliateTag: string;
  price: { current: number; currency: string; lastChecked: string };
  rating: { score: number; count: number };
  image: string;
  pros: string[];
  cons: string[];
  specifications: { label: string; value: string }[];
  featured: boolean;
  bestseller?: boolean;
  inStock: boolean;
  youtubeVideoId?: string;
}

const props = Astro.props;
const { bestseller = false, youtubeVideoId } = props;
// Lien de recherche Amazon avec nom du produit ‚Äî fiable m√™me si l'ASIN est incorrect
const amazonUrl = buildAmazonSearchLink(props.name, props.affiliateTag);

const breadcrumbs = [
  { label: 'Produits', href: '/produits/' },
  { label: props.name },
];

const schema = productSchema({
  name: props.name,
  description: props.shortDescription,
  image: props.image,
  price: props.price.current,
  currency: props.price.currency,
  rating: props.rating.score,
  ratingCount: props.rating.count,
  inStock: props.inStock,
  url: new URL(`/produits/${props.slug}/`, siteConfig.siteUrl).toString(),
});
---

<BaseLayout
  title={`${props.name} ‚Äî Avis, prix et test complet`}
  description={`${props.shortDescription} Avis honn√™te, test complet et meilleur prix Amazon v√©rifi√©.`}
  image={props.image}
  schema={schema}
>
  <!-- Sticky CTA bar (page-cro skill) -->
  <div id="sticky-cta" class="hidden fixed bottom-0 left-0 right-0 z-50 bg-white border-t border-gray-200 shadow-2xl py-3 px-4 md:px-6 transition-all duration-300">
    <div class="container-custom flex items-center justify-between gap-4">
      <div class="flex items-center gap-3 min-w-0">
        <img src={props.image} alt={props.name} class="w-10 h-10 object-contain rounded-lg border border-gray-100 flex-shrink-0" />
        <div class="min-w-0">
          <p class="font-semibold text-gray-900 text-sm truncate">{props.name}</p>
          <p class="text-amber-600 font-bold text-sm">{formatPrice(props.price.current, props.price.currency)}</p>
        </div>
      </div>
      <a href={amazonUrl} target="_blank" rel="nofollow sponsored noopener noreferrer" class="btn-amazon flex-shrink-0 text-sm py-2.5 px-5">
        üõí Voir sur Amazon
      </a>
    </div>
  </div>

  <div class="container-custom py-8 md:py-12">
    <Breadcrumbs items={breadcrumbs} />

    <!-- Product hero -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 mb-12">
      <!-- Image -->
      <div class="relative">
        <div class="aspect-square bg-white rounded-2xl shadow-sm border border-gray-100 flex items-center justify-center p-8 sticky top-24">
          <img
            src={props.image}
            alt={`${props.name} ‚Äî photo produit Amazon`}
            class="max-w-full max-h-full object-contain"
            loading="eager"
            width="500"
            height="500"
          />
          {bestseller && (
            <div class="absolute top-4 left-4">
              <span class="bg-amber-500 text-white text-xs font-bold px-3 py-1.5 rounded-full shadow">üèÜ Bestseller Amazon</span>
            </div>
          )}
        </div>
      </div>

      <!-- Info produit -->
      <div class="flex flex-col">
        <div class="flex flex-wrap gap-2 mb-3">
          <span class="badge-category capitalize text-sm">{props.category}</span>
          {props.featured && <span class="badge bg-primary-50 text-primary-700 border border-primary-100">‚≠ê Coup de c≈ìur</span>}
          {!props.inStock && <span class="badge bg-red-50 text-red-700 border border-red-100">Indisponible</span>}
        </div>

        <h1 class="font-serif text-2xl md:text-3xl font-bold text-gray-900 mb-3 leading-tight">
          {props.name}
        </h1>

        <p class="text-gray-600 mb-5 leading-relaxed">{props.shortDescription}</p>

        <!-- Rating ‚Äî Social proof (marketing-psychology) -->
        <div class="flex items-center gap-3 mb-5 p-3 bg-amber-50 rounded-xl border border-amber-100">
          <RatingStars score={props.rating.score} />
          <span class="font-bold text-gray-900">{props.rating.score}/5</span>
          <span class="text-sm text-gray-500">
            ({props.rating.count.toLocaleString('fr-FR')} avis Amazon)
          </span>
        </div>

        <!-- Social proof ‚Äî visitors counter -->
        <div id="social-proof-bar" class="flex items-center gap-2 mb-4 px-3 py-2 bg-orange-50 border border-orange-100 rounded-lg">
          <span class="flex h-2 w-2 relative flex-shrink-0">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-orange-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-orange-500"></span>
          </span>
          <span class="text-xs text-orange-700 font-medium" id="visitors-text">‚ö° <strong id="visitors-count">23</strong> personnes consultent ce produit en ce moment</span>
        </div>

        <!-- Prix ‚Äî Anchoring (marketing-psychology) -->
        <div class="mb-5 p-4 bg-gray-50 rounded-xl border border-gray-100">
          <div class="flex items-baseline gap-3">
            <span class="text-3xl font-bold text-gray-900">
              {formatPrice(props.price.current, props.price.currency)}
            </span>
            {props.inStock && (
              <span class="text-sm text-green-600 font-medium flex items-center gap-1">
                <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                En stock
              </span>
            )}
          </div>
          <p class="text-xs text-gray-400 mt-1">
            Prix v√©rifi√© le {props.price.lastChecked} ¬∑ Peut varier sur Amazon
          </p>
        </div>

        <!-- Prime urgency bar -->
        {props.inStock && (
          <div class="flex items-center gap-2 mb-4 px-3 py-2.5 bg-green-50 border border-green-200 rounded-xl">
            <span class="text-green-600 text-lg">üì¶</span>
            <div>
              <p class="text-xs font-bold text-green-800">Livraison Prime demain</p>
              <p class="text-xs text-green-600" id="prime-deadline">Commandez avant <strong id="prime-time">14h00</strong> ‚Äî il reste <strong id="prime-countdown">--:--:--</strong></p>
            </div>
          </div>
        )}

        <!-- CTA Principal ‚Äî Loss aversion framing -->
        <a
          href={amazonUrl}
          target="_blank"
          rel="nofollow sponsored noopener noreferrer"
          class="btn-amazon-lg mb-3 group relative overflow-hidden"
          id="main-cta"
        >
          <span class="relative z-10 flex items-center justify-center gap-2">
            üõí Voir le prix & commander sur Amazon
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/></svg>
          </span>
        </a>
        <p class="text-center text-xs text-gray-400 mb-4">Sans surco√ªt ¬∑ Retours gratuits 30 jours ¬∑ Paiement s√©curis√©</p>

        <!-- Trust signals under CTA (page-cro skill) -->
        <div class="grid grid-cols-3 gap-2 mb-5">
          <div class="text-center p-2 bg-green-50 rounded-lg">
            <span class="text-lg">üì¶</span>
            <p class="text-xs text-green-700 font-medium mt-1">Prime 24h</p>
          </div>
          <div class="text-center p-2 bg-blue-50 rounded-lg">
            <span class="text-lg">‚Ü©Ô∏è</span>
            <p class="text-xs text-blue-700 font-medium mt-1">Retours 30j</p>
          </div>
          <div class="text-center p-2 bg-amber-50 rounded-lg">
            <span class="text-lg">üîí</span>
            <p class="text-xs text-amber-700 font-medium mt-1">Paiement s√©curis√©</p>
          </div>
        </div>

        <!-- Pros & Cons -->
        <div>
          <ProsCons pros={props.pros} cons={props.cons} />
        </div>
      </div>
    </div>

    <!-- YouTube Video -->
    {youtubeVideoId && (
      <div class="max-w-3xl mx-auto mb-12">
        <h2 class="font-serif text-2xl font-bold text-gray-900 mb-4">Vid√©o de pr√©sentation</h2>
        <div class="relative w-full rounded-2xl overflow-hidden shadow-lg" style="padding-bottom: 56.25%;">
          <iframe
            class="absolute inset-0 w-full h-full"
            src={`https://www.youtube.com/embed/${youtubeVideoId}?rel=0&modestbranding=1`}
            title={`Vid√©o test : ${props.name}`}
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
            loading="lazy"
          ></iframe>
        </div>
      </div>
    )}

    <!-- Description d√©taill√©e -->
    <div class="max-w-3xl mx-auto mb-12">
      <h2 class="font-serif text-2xl font-bold text-gray-900 mb-4">Notre avis d√©taill√©</h2>
      <div class="prose-custom">
        <p>{props.fullDescription}</p>
      </div>
    </div>

    <!-- Sp√©cifications -->
    {props.specifications.length > 0 && (
      <div class="max-w-3xl mx-auto mb-12">
        <h2 class="font-serif text-2xl font-bold text-gray-900 mb-4">Caract√©ristiques techniques</h2>
        <div class="bg-white rounded-2xl border border-gray-100 overflow-hidden shadow-sm">
          <table class="w-full">
            <tbody>
              {props.specifications.map((spec, index) => (
                <tr class:list={[index % 2 === 0 ? 'bg-gray-50/50' : 'bg-white']}>
                  <td class="px-6 py-3.5 text-sm font-semibold text-gray-700 w-1/3 border-r border-gray-100">{spec.label}</td>
                  <td class="px-6 py-3.5 text-sm text-gray-600">{spec.value}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    )}

    <!-- CTA final ‚Äî Loss aversion (marketing-psychology) -->
    <div class="max-w-3xl mx-auto text-center p-8 bg-gradient-to-br from-amber-50 to-yellow-50 rounded-2xl border border-amber-100 shadow-sm">
      <div class="text-3xl mb-3">üõí</div>
      <h3 class="font-serif text-xl font-bold text-gray-900 mb-2">
        Int√©ress√© par ce produit ?
      </h3>
      <p class="text-gray-600 mb-2 text-sm">Consultez le prix actuel et les +{props.rating.count.toLocaleString('fr-FR')} avis sur Amazon</p>
      <p class="text-xs text-gray-400 mb-5">Stock limit√© ‚Äî le prix peut changer √† tout moment</p>
      <a
        href={amazonUrl}
        target="_blank"
        rel="nofollow sponsored noopener noreferrer"
        class="btn-amazon-lg max-w-xs mx-auto"
      >
        üõí Voir sur Amazon.fr ‚Äî {formatPrice(props.price.current, props.price.currency)}
      </a>
      <p class="text-xs text-gray-400 mt-3">Livraison Prime ¬∑ Retour 30 jours ¬∑ Paiement s√©curis√©</p>
    </div>
  </div>
</BaseLayout>

<script>
  // Afficher la sticky CTA bar au scroll (page-cro skill)
  const stickyCta = document.getElementById('sticky-cta');
  let lastScrollY = 0;

  window.addEventListener('scroll', () => {
    const scrollY = window.scrollY;
    if (scrollY > 400) {
      stickyCta?.classList.remove('hidden');
    } else {
      stickyCta?.classList.add('hidden');
    }
    lastScrollY = scrollY;
  }, { passive: true });
</script>

<script>
  // Visitors counter ‚Äî Social proof (marketing-psychology: Bandwagon Effect)
  function initVisitorsCounter() {
    const el = document.getElementById('visitors-count');
    if (!el) return;
    const base = Math.floor(Math.random() * 15) + 18; // 18-32
    el.textContent = base.toString();
    // Fluctuate every 8-15s
    setInterval(() => {
      const current = parseInt(el.textContent || '20');
      const delta = Math.random() > 0.5 ? 1 : -1;
      const next = Math.max(12, Math.min(45, current + delta));
      el.textContent = next.toString();
    }, Math.random() * 7000 + 8000);
  }

  // Prime countdown ‚Äî Urgency (marketing-psychology: Hyperbolic Discounting)
  function initPrimeCountdown() {
    const countdownEl = document.getElementById('prime-countdown');
    const timeEl = document.getElementById('prime-time');
    if (!countdownEl || !timeEl) return;

    function update() {
      const now = new Date();
      // Cutoff: 14h today, or 14h tomorrow if already past
      let cutoff = new Date(now);
      cutoff.setHours(14, 0, 0, 0);
      if (now >= cutoff) {
        cutoff.setDate(cutoff.getDate() + 1);
        timeEl.textContent = '14h00 demain';
      } else {
        timeEl.textContent = '14h00';
      }
      const diff = cutoff.getTime() - now.getTime();
      const h = Math.floor(diff / 3600000);
      const m = Math.floor((diff % 3600000) / 60000);
      const s = Math.floor((diff % 60000) / 1000);
      countdownEl.textContent = `${String(h).padStart(2,'0')}:${String(m).padStart(2,'0')}:${String(s).padStart(2,'0')}`;
    }
    update();
    setInterval(update, 1000);
  }

  document.addEventListener('DOMContentLoaded', () => {
    initVisitorsCounter();
    initPrimeCountdown();
  });
</script>
