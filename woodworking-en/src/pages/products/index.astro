---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { buildClickBankLink } from '../../utils/affiliate';
import categories from '../../data/categories.json';

const allProducts = await getCollection('products');
const sortedProducts = allProducts.sort((a, b) => b.data.gravity - a.data.gravity);
---

<BaseLayout title="All DIY Products" description="Browse the best DIY woodworking plans, shed blueprints, and home improvement programs on ClickBank. All paying 75% commission.">

  <!-- Page Header -->
  <section class="bg-gradient-to-r from-primary-700 to-primary-900 text-white py-12 px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl font-bold mb-3">All DIY Products</h1>
      <p class="text-primary-200 text-lg">Top ClickBank DIY programs — sorted by gravity score</p>
    </div>
  </section>

  <!-- Products Grid -->
  <section class="py-12 px-4">
    <div class="max-w-6xl mx-auto">

      <!-- Categories filter -->
      <div class="flex flex-wrap gap-3 mb-10">
        <button class="bg-primary-600 text-white px-4 py-2 rounded-lg text-sm font-semibold">All</button>
        {categories.map(cat => (
          <button class="bg-white border border-gray-200 text-gray-600 px-4 py-2 rounded-lg text-sm font-medium hover:border-primary-400 hover:text-primary-600 transition-colors">
            {cat.emoji} {cat.name}
          </button>
        ))}
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {sortedProducts.map(product => {
          const cbLink = buildClickBankLink(product.data.clickbankNickname, product.data.clickbankId);
          return (
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition-all hover:-translate-y-0.5 flex flex-col">
              <div class="bg-gradient-to-br from-primary-50 to-wood-50 p-6 text-center">
                <span class="text-5xl">{product.data.heroIcon}</span>
                {product.data.badge && (
                  <div class={`mt-2 inline-block px-2.5 py-0.5 rounded-full text-xs font-bold ${
                    product.data.badgeColor === 'gold' ? 'bg-yellow-100 text-yellow-800' :
                    product.data.badgeColor === 'blue' ? 'bg-blue-100 text-blue-800' :
                    product.data.badgeColor === 'purple' ? 'bg-purple-100 text-purple-800' :
                    product.data.badgeColor === 'orange' ? 'bg-orange-100 text-orange-800' :
                    'bg-green-100 text-green-800'
                  }`}>
                    {product.data.badge}
                  </div>
                )}
              </div>
              <div class="p-5 flex flex-col flex-1">
                <h2 class="font-bold text-gray-900 mb-2 leading-snug">{product.data.name}</h2>
                <p class="text-gray-500 text-sm leading-relaxed mb-4 flex-1">{product.data.shortDescription}</p>

                <!-- Stats row -->
                <div class="grid grid-cols-3 gap-2 mb-4 text-center text-xs">
                  <div class="bg-gray-50 rounded-lg p-2">
                    <div class="font-bold text-green-600">{product.data.commission.percentage}%</div>
                    <div class="text-gray-400">Commission</div>
                  </div>
                  <div class="bg-gray-50 rounded-lg p-2">
                    <div class="font-bold text-gray-800">{product.data.gravity}</div>
                    <div class="text-gray-400">Gravity</div>
                  </div>
                  <div class="bg-gray-50 rounded-lg p-2">
                    <div class="font-bold text-blue-600">${product.data.commission.avgPerSale.toFixed(0)}</div>
                    <div class="text-gray-400">Avg/Sale</div>
                  </div>
                </div>

                <div class="space-y-2">
                  <a href={cbLink} target="_blank" rel="noopener noreferrer nofollow"
                     class="block w-full text-center bg-primary-600 text-white font-bold py-2.5 rounded-xl hover:bg-primary-700 transition-colors text-sm">
                    Get Affiliate Link →
                  </a>
                  <a href={`/products/${product.data.slug}/`}
                     class="block w-full text-center border border-gray-200 text-gray-600 font-medium py-2 rounded-xl hover:bg-gray-50 transition-colors text-sm">
                    Read Full Review
                  </a>
                </div>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>

</BaseLayout>
